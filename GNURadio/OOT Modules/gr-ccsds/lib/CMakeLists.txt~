    asm_deframer_impl.cc
    rs_encode_impl.cc
    add_impl.cc
    gr_ccsds_impl.cc
    rs_decode_impl.cc
)

set(ccsds_sources "${ccsds_sources}" PARENT_SCOPE)
if(NOT ccsds_sources)
	MESSAGE(STATUS "No C++ sources... skipping lib/")
	return()
endif(NOT ccsds_sources)

#find_library(libfec_location fec)

